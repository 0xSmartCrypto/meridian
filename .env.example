# Hyperliquid
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz

# paper | live
MODE=paper  
LOG_LEVEL=info

# Alerts - Email (Resend)
RESEND_API_KEY=
ALERT_EMAIL_TO=

# Alerts - Telegram (FREE)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Alert Strategy: mean_reversion | spread_harvest | both
ALERT_STRATEGY=both

# Hold periods
ALERT_HOLD_DAYS=7
ALERT_SPREAD_HOLD_DAYS=14

# Default thresholds (used if per-coin not set)
ALERT_Z_THRESHOLD=2.2
ALERT_MIN_SPREAD=0.05

# Per-coin Z thresholds (optional - overrides default)
# HYPE has stronger mean reversion, use higher threshold
ALERT_Z_THRESHOLD_HYPE=2.5
ALERT_Z_THRESHOLD_BTC=2.2
ALERT_Z_THRESHOLD_ETH=2.2

# Per-coin spread thresholds (optional)
# ALERT_MIN_SPREAD_HYPE=0.05
# ALERT_MIN_SPREAD_BTC=0.05
# ALERT_MIN_SPREAD_ETH=0.05

# Coins to monitor
ALERT_COINS=HYPE,BTC,ETH
